<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
<%_ if (admin) { -%>
  // Highlight changes in form inputs
  $(document).on('input', '.form-control', function(event) {
    $(this).addClass('bg-dark text-white');
  });
  // Insert a form
  $(document).on('click','#insert',function(event) {
    $(this).before($(`
    <form>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row"><input type="text" class="form-cntrol county" name="county"></td></th>
            <td><input type="text" class="form-cntrol date" name="day"></td>
            <td><input type="text" class="form-cntrol confirmed" name="confirmed"></td>
            <td><input type="text" class="form-cntrol death" name="death"></td>
          </tr>
        </tbody>
      </table>
      <button class="create btn btn-sm btn-primary m-1">Save</button>
      <button class="uninsert btn btn-sm btn-primary m-1">Delete</button>
    </form>
    `));
  });
  // Un-insert a form
  $(document).on('click', '.uninsert', function(event) {
    $(this).closest('form').remove();
    event.preventDefault();
  });
  // Create a new statistic
  $(document).on('click', '.create', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'post', url: '/statistics', data: form.serialize()})
      .done(function(id) {
        form.attr('id', id);
        form.find('.create').removeClass('create').addClass('update');
        form.find('.uninsert').removeClass('uninsert').addClass('delete');
        form.find('.form-control').removeClass('bg-dark text-white');
      })
      .fail(error => alert(error.responseText));
	});
<%_ } else { -%>
  $(document).on('click', '#sort', function(event) {
    const tbody = $('#display tbody');
    tbody.html($('tr',tbody).get().reverse())
  });
<%_ } -%>
</script>
