<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
<%_ if (admin) { -%>
  // Highlight changes in form inputs
  $(document).on('input', '.form-control', function(event) {
    $(this).addClass('bg-dark text-white');
  });

  // Insert a form
  $(document).on('click','#insert',function(event) {
    $(this).before($(`
    <form id="<%= statistic.id -%>">
      <table class="table">
        <tbody>
          <tr>
            <th><input type="text" class="form-cntrol" scope="row" value="<%= statistic.day[statistic.day.length - 1] -%>" name="day"></th>
            <td><input type="text" class="form-cntrol" value="<%= statistic.confirmed[statistic.day.length - 1] -%>" name="confirmed"></td>
            <td><input type="text" class="form-cntrol" value="<%= statistic.death[statistic.day.length - 1] -%>" name="death"></td>
          </tr>
        </tbody>
      </table>
      <button class="create btn btn-sm btn-primary m-1">Save</button>
      <button class="uninsert btn btn-sm btn-primary m-1">Delete</button>
    </form>
    `));
  });

  // Un-insert a form
  $(document).on('click', '.uninsert', function(event) {
    $(this).closest('form').remove();
    event.preventDefault();
  });

  // Create a new statistic
  // Does not work properly!
  $(document).on('click', '.create', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    data = form.serialize;
    statistic.day.push(data.day);
    statistic.confirmed.push(data.confirmed);
    statistic.death.push(data.death);
    $.ajax({method: 'put', url: `/statistics/${form.attr('id')}`, data: form.serialize()})
      .fail(error => alert(error.responseText));
  });
</script>
<%_ } else { -%>

<script>
  $(document).on('click', '#sort', function(event) {
    statistic.day.reverse();
    statistic.confirmed.reverse();
    statistic.death.reverse();
  });
</script>
<%_ } -%>
