<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'statistics'}); -%>
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto p-3 border-right">
          <nav class="nav nav-pills flex-column">
            <%_ for (const s of statistic) { -%>
              <%_ const status = (s.id === statistic.id) ? 'active bg-dark' : 'inactive'; -%>
              <a href="/statistics/<%= s.id -%>" class="nav-item nav-link <%= status -%>"><%= s.county -%></a>
            <%_ } -%>
          </nav>
          <%_ if (admin) { -%>
          <form id="create" class="form my-1">
            <input type="text" name="_id" placeholder="CS###" size="1" class="form-control">
          </form>
        <%_ } -%>
        </div>
        <div class="col">
          <main class="p-3">
            <%_ if (admin) { -%>
              <%- include('./edit', {statistic: statistic, statisticID: statisticID}); -%>
            <%_ } else { -%>
              <%- include('./browse', {statistic: statistic}); -%>
            <%_ } -%>

              </tbody>
            </table>
          </main>
        </div>
      </div>
    </div>
    <%_ if (admin) { -%>
      <%- include('./scripts', {statistic: statistic}); -%>
    <%_ } -%>
  </body>
</html>
