<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'statistics'}); -%>
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto p-3 border-right">
          <nav class="nav nav-pills flex-column">
            <%_ for (const id of statisticID) { -%>
              <%_ const status = (id === statistic.id ) ? 'active bg-dark' : 'inactive'; -%>
              <a href="/statistics/<%= id -%>" class="nav-item nav-link <%= status -%>"><%= id -%></a>
            <%_ } -%>
          </nav>
        </div>
        <div class="col">
          <main class="p-3">
            <%_ if (admin) { -%>
              <%- include('./edit', {statistic: statistic}); -%>
            <%_ } else { -%>
              <%- include('./browse', {statistic: statistic}); -%>
            <%_ } -%>
              </tbody>
            </table>
          </main>
        </div>
      </div>
    </div>
    <%_ if (admin) { -%>
      <%- include('./scripts', {statistic: statistic}); -%>
    <%_ } -%>
  </body>
</html>
