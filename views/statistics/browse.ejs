<main class="p-3">
  <h2><%= statistic.county -%></h2>
  <table id="display" class="table">
    <thead>
      <tr>
        <th scope="col">
          <button id="sort" class="btn btn-primary" name="button">Date</button></th>
        <th scope="col">Confirmed</th>
        <th scope="col">Death</th>
      </tr>
    </thead>
    <tbody>
      <%_ for (let i = 0; i < statistic.day.length; i++) { -%>
        <tr>
          <th scope="row"><%= statistic.day[i] -%></th>
          <td><%= statistic.confirmed[i] -%></td>
          <td><%= statistic.death[i] -%></td>
        </tr>
      <%_ } -%>
    </tbody>
  </table>
</main>
