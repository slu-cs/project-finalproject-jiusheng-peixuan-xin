<main class="p-3">
  <h2><%= statistic.county -%></h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <button id="sort" class="btn btn-sm btn-primary m-1">Date</button>
        </th>
        <th scope="col">Confirmed</th>
        <th scope="col">Death</th>
      </tr>
    </thead>
    <tbody>
      <%_ for (let i = 0; i < statistic.day.length; i++) { -%>
        <tr>
          <td scope="row"><%= statistic.day[i] -%></td>
        </tr>
        <tr>
          <td scope="row"><%= statistic.confirmed[i] -%></td>
        </tr>
        <tr>
          <td scope="row"><%= statistic.death[i] -%></td>
        </tr>
      <%_ } -%>
    </tbody>
  </table>
</main>
