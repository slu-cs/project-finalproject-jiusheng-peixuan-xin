<main class="p-3">
  <table class="table">
    <form class="form-inline">
          <input type="text" class="form-control county" name="county">
          <input type="text" class="form-control date" name="date">
          <input type="text" class="form-control confirmed" name="confirmed">
          <input type="text" class="form-control death" name="death">
      <button class="create btn btn-sm btn-primary m-1">Save</button>
    </form>
    <thead>
      <tr>
        <th scope="col">County</th>
        <th scope="col">Date</th>
        <th scope="col">Confirmed</th>
        <th scope="col">Death</th>
      </tr>
    </thead>
    <tbody>
      <%_ for (const statistic of statistics) { -%>
        <form id="<%= statistic.id -%>">
        <tr>
          <th scope="row"><%= statistic.county -%></th>
          <td><%= statistic.date -%></td>
          <td><%= statistic.confirmed -%></td>
          <td><%= statistic.death -%></td>
        </tr>
        </form>
      <%_ } -%>
    </tbody>
  </table>
</main>
