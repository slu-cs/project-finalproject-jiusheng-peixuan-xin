<main class="p-3">
  <table class="table">
    <form class="form-inline">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row"><input type="text" class="form-control county" name="county"></td></th>
            <td><input type="text" class="form-control date" name="date"></td>
            <td><input type="text" class="form-control confirmed" name="confirmed"></td>
            <td><input type="text" class="form-control death" name="death"></td>
          </tr>
        </tbody>
      </table>
      <button class="create btn btn-sm btn-primary m-1">Save</button>
    </form>
    <thead>
      <tr>
        <th scope="col">County</th>
        <th scope="col">Date</th>
        <th scope="col">Confirmed</th>
        <th scope="col">Death</th>
      </tr>
    </thead>
    <tbody>
      <%_ for (const statistic of statistics) { -%>
        <form id="<%= statistic.id -%>">
        <tr>
          <th scope="row"><%= statistic.county -%></th>
          <td><%= statistic.date -%></td>
          <td><%= statistic.confirmed -%></td>
          <td><%= statistic.death -%></td>
        </tr>
        </form>
      <%_ } -%>
    </tbody>
  </table>
</main>
