<div class="container-fluid">
  <div class="col">
    <div class="col-auto p-3 border-right">
      <h1>Q&A</h1>

      <form action='/qas'>
        <input type="text"  name="keyword" placeholder="Question">
        <button>Search</button>



      </form>

      <nav class="nav nav-pills flex-column">
       <form class="form-inline">
           <input type="text" name="question" placeholder="Question"  class="form-control form-control-lg font-weight-bold mb-1">
           <button class="btn btn-primary create">Save</button>
       </form>
       <ul class="nav navbar-nav navbar-right">
         <li><a href="#">Together at home, we will win this war!</a></li>
       </ul>
       <h2>Answerd Question</h2>
        <%_ for (const qa of qas) { -%>
          <%_ if (qa.answer!=null) { -%>
            <h2><%= qa.question -%></h2>
            <p><%= qa.answer -%></p>
          <%_ } -%>
        <%_ } -%>

        </nav>
      </div>
    </div>





  </div>
