<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'qa'}); -%>
    <div class="container-fluid">
      <div class="row">
        <form id="<%= qa.id -%>" class="form-inline">
            <input type="text" name="question" placeholder="Question" value="<%= qa.question -%>" class="form-control form-control-lg font-weight-bold mb-1">
            <textarea name="answer" placeholder="Answer" rows="3" class="form-control mb-1"><%= qa.answer -%></textarea>
          <button class="btn btn-primary update">Save</button>
          <button class="delete btn btn-primary">Delete</button>
        </form>
        <div class="col">
          <main class="p-3">
            <%_ if (admin) { -%>
              <%- include('./edit', {qas: qas}); -%>
            <%_ } else { -%>
              <%- include('./browse', {qas: qas}); -%>
            <%_ } -%>
          </main>
        </div>
      </div>
    </div>
    <%_ if (admin) { -%>
      <%- include('./scripts', {qas: qas}); -%>
    <%_ } -%>
  </body>
</html>
